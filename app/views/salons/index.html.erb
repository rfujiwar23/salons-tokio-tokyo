<%= link_to 'サロン登録をする', new_salon_path %>

<div class="row">
<% @salons.each do |salon| %>
<div class="card col-md-4" >
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= salon.name %></h5>
    <p class="card-text"><%= salon.comment %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><i class="fas fa-map-marker-alt"></i> <%= salon.address %></li>
    <li class="list-group-item"><i class="fas fa-phone-square"></i> <%= salon.phone %></li>
    <li class="list-group-item"><i class="fas fa-external-link-alt"></i> http://www._____.com</li>
  </ul>
  <h6 class="card-title">取り扱っている製品</h6>
  <ul class="list_of_products">
    <li><% if salon.tokio == true %>
        TOKIO
        <% end %>
    </li>
    <li><% if salon.ie == true %>
        IE
        <% end %>
    </li>
    <li><% if salon.design == true %>
        Design
        <% end %>
    </li>
    <li><% if salon.straight == true %>
        Straight
        <% end %>
    </li>
  </ul>
  <div class="card-footer">
    <p>
    <%= link_to '詳細', salon, class: "links_to" %> |
    <%= link_to '編集', edit_salon_path(salon), class: "links_to" %> |
    <%= link_to '削除', salon, method: :delete, data: { confirm: '削除します。よろしいですか?' }, class: "links_to" %>
    </p>
  </div>
</div>
<% end %>
</div>

